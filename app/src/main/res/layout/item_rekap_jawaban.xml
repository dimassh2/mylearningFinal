<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_nama_mahasiswa_jawaban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/btn_lihat_jawaban"
            android:layout_marginEnd="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Nama Mahasiswa Pengirim Jawaban" />

        <TextView
            android:id="@+id/tv_waktu_kirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_mahasiswa_jawaban"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            tools:text="Dikirim: 10 Jul 2025, 14:30" />

        <Button
            android:id="@+id/btn_lihat_jawaban"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Lihat Jawaban" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>